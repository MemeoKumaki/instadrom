<%= form_for @post do |f| %>
  <%= f.hidden_field :user_id, :value => current_user.id %>
  <div class="form-group">
    <%= f.text_area :body, placeholder: "What are you thinking about?", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.file_field :image %>
  </div>
  <div class="form_control">
    <%= f.submit "Post it", :class => "btn btn-primary" %>
  </div>
<% end %>